{
  "manifest_version": 3,
  "name": "ApplicationPoint - Job Tracker",
  "version": "0.1.0",
  "description": "Save job postings from LinkedIn and Indeed to your ApplicationPoint tracker",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*.vercel.app/*",
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Save job to ApplicationPoint"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/jobs/view/*",
        "https://*.linkedin.com/jobs/collections/*",
        "https://*.linkedin.com/jobs/search/*"
      ],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.indeed.com/viewjob*",
        "https://*.indeed.com/rc/clk*"
      ],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*/*/job/*",
        "https://*/*/jobs/*",
        "https://*/*/career/*",
        "https://*/*/careers/*"
      ],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
